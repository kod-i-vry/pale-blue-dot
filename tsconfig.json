{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,                                     
    "strict": true,                                      
    "skipLibCheck": true, 
    "strictPropertyInitialization": false,    
    "experimentalDecorators": true,
    "noImplicitAny": false
  }
}